<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_action_shortcut"
    app:startDestination="@id/actionShortcutListFragment">

    <fragment
        android:id="@+id/actionShortcutListFragment"
        android:name="io.github.sds100.keymapper.ui.fragment.CreateActionShortcutFragment"
        android:label="CreateActionShortcutListFragment"
        tools:layout="@layout/fragment_create_action_shortcut">

        <action
            android:id="@+id/action_to_actionOptionsFragment"
            app:destination="@id/actionShortcutOptionsFragment"
            app:enterAnim="@anim/slide_in_bottom" />
    </fragment>

    <dialog
        android:id="@+id/actionShortcutOptionsFragment"
        android:name="io.github.sds100.keymapper.ui.fragment.actionshortcut.ActionShortcutOptionsFragment"
        android:label="ActionOptionsFragment">

        <argument
            android:name="@string/nav_arg_keymap_action_options"
            app:argType="io.github.sds100.keymapper.data.model.options.ActionShortcutOptions" />
    </dialog>

    <action
        android:id="@+id/action_global_chooseActionFragment"
        app:destination="@id/nav_choose_action"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right">
        <argument
            android:name="@string/nav_arg_choose_action_request_key"
            app:argType="string" />
    </action>

    <include app:graph="@navigation/nav_choose_action" />
</navigation>