<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_config_keymap"
    app:startDestination="@id/config_keymap_fragment">

    <fragment
        android:id="@+id/config_keymap_fragment"
        android:name="io.github.sds100.keymapper.ui.fragment.keymap.ConfigKeymapFragment"
        android:label="Edit Keymap"
        tools:layout="@layout/fragment_config_keymap">

        <argument
            android:name="keymapId"
            app:argType="long" />

        <action
            android:id="@+id/action_config_keymap_fragment_to_choose_action_fragment"
            app:destination="@id/nav_choose_action"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument
                android:name="@string/nav_arg_choose_action_request_key"
                app:argType="string" />
        </action>

        <action
            android:id="@+id/action_config_keymap_fragment_to_choose_constraint"
            app:destination="@id/nav_choose_constraint"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">

            <argument
                android:name="@string/nav_arg_choose_constraint_request_key"
                app:argType="string" />
        </action>

        <action
            android:id="@+id/action_config_keymap_fragment_to_actionOptionsFragment"
            app:destination="@id/keymapActionOptionsFragment"
            app:enterAnim="@anim/slide_in_bottom" />

        <action
            android:id="@+id/action_triggerKeyOptionsFragment"
            app:destination="@id/triggerKeyOptionsFragment"
            app:enterAnim="@anim/slide_in_bottom" />
    </fragment>

    <include app:graph="@navigation/nav_choose_action" />
    <include app:graph="@navigation/nav_choose_constraint" />

    <action
        android:id="@+id/action_global_helpFragment"
        app:destination="@id/onlineFragment"
        app:enterAnim="@anim/slide_in_bottom">
        <argument
            android:name="@string/nav_arg_header"
            android:defaultValue="@string/title_help"
            app:argType="reference" />
        <argument
            android:name="@string/nav_arg_file_url"
            android:defaultValue="@string/url_help"
            app:argType="reference" />
        <argument
            android:name="@string/nav_arg_file_url_alt"
            android:defaultValue="@string/url_help_alternate"
            app:argType="reference" />
    </action>

    <dialog
        android:id="@+id/triggerKeyOptionsFragment"
        android:name="io.github.sds100.keymapper.ui.fragment.keymap.TriggerKeyOptionsFragment"
        android:label="TriggerKeyOptionsFragment">

        <argument
            android:name="@string/nav_arg_trigger_key_options"
            app:argType="io.github.sds100.keymapper.data.model.options.TriggerKeyOptions" />
    </dialog>

    <dialog
        android:id="@+id/keymapActionOptionsFragment"
        android:name="io.github.sds100.keymapper.ui.fragment.keymap.KeymapActionOptionsFragment"
        android:label="KeymapActionOptionsFragment">

        <argument
            android:name="@string/nav_arg_keymap_action_options"
            app:argType="io.github.sds100.keymapper.data.model.options.KeymapActionOptions" />
    </dialog>
</navigation>