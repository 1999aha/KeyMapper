<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="io.github.sds100.keymapper.data.model.IntentExtraListItemModel" />

        <variable
            name="onRemoveClick"
            type="View.OnClickListener" />

        <variable
            name="onShowExampleClick"
            type="View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutExtraName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:hint="@string/hint_intent_extra_name"
            app:layout_constraintEnd_toStartOf="@id/buttonRemove"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutExtraValue"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:hint="@{@string/hint_intent_extra_value_with_type(model.typeString)}"
            app:layout_constraintEnd_toStartOf="@+id/buttonRemove"
            app:layout_constraintStart_toStartOf="@id/textInputLayoutExtraName"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutExtraName">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/buttonRemove"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="36dp"
            android:layout_height="0dp"
            android:onClick="@{onRemoveClick}"
            android:tint="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textInputLayoutExtraName"
            app:layout_constraintTop_toTopOf="@id/textInputLayoutExtraName"
            app:srcCompat="@drawable/ic_outline_clear_24" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/buttonShowExample"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="36dp"
            android:layout_height="0dp"
            android:onClick="@{onShowExampleClick}"
            android:tint="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textInputLayoutExtraValue"
            app:layout_constraintTop_toTopOf="@id/textInputLayoutExtraValue"
            app:srcCompat="@drawable/ic_baseline_help_outline_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>